bool canMakeArithmeticProgression(int* arr, int arrSize){
    int temp;
    for(int i=0;i<arrSize;i++)
    {
        for(int j=i+1;j<arrSize;j++)
        {
            if(arr[i]>arr[j])
            {
                temp=arr[i];
                arr[i]=arr[j];
                arr[j]=temp;
            }
        }
    }
   
        int diff=arr[1]-arr[0];
        for(int i=2;i<arrSize;i++)
        {
            if(arr[i] - arr[i-1] !=diff)
            {
                return false;
            }
        }
        return true;
    }
    
