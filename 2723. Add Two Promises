async function addTwoPromises(promise1: Promise<number>, promise2: Promise<number>): Promise<number> {
  const[p1,p2]=await Promise.all([promise1,promise2]);
    return p1 + p2;
};

/**
 * addTwoPromises(Promise.resolve(2), Promise.resolve(2))
 *   .then(console.log); // 4
 */
